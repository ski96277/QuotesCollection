<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:background="@drawable/ten"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#CC000000"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/xView"

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Double TapDouble TapDouble Tap"
                    android:textColor="@color/colorwhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/myapp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"
                    android:focusable="true"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_9sdp"
                    android:text="#sayings_quotes"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_weight=".2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/copyBtn"
            android:layout_width="0dp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/transparent"
            android:drawableLeft="@drawable/ic_content_copy_black_24dp"
            android:focusable="true"
            android:text="Copy"
            android:textAllCaps="false"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/fontBtn"
            android:layout_width="0dp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/transparent"
            android:drawableLeft="@drawable/ic_font_download_black_24dp"
            android:focusable="true"
            android:text="Font"
            android:textAllCaps="false"
            android:textColor="@color/colorwhite"
            android:textStyle="bold" />


        <Button
            android:id="@+id/colorPickerBtn"
            android:layout_width="0dp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/transparent"
            android:drawableLeft="@drawable/ic_edit_white_24dp"
            android:focusable="true"
            android:text="Color"
            android:textAllCaps="false"
            android:textColor="@color/colorwhite"
            android:textStyle="bold" />

        <Button
            android:id="@+id/shareBtn"
            android:layout_width="0dp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/transparent"
            android:drawableLeft="@drawable/ic_share_black_24dp"

            android:focusable="true"
            android:text="share"
            android:textColor="@color/colorwhite"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
